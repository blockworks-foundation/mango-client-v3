{
  "name": "mango-client",
  "version": "3.0.0",
  "description": "Client to interact with the Mango program on Solana",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "repository": "git@github.com:blockworks-foundation/mango-ts.git",
  "author": {
    "name": "Blockworks Foundation",
    "email": "hello@blockworks.foundation",
    "url": "https://blockworks.foundation"
  },
  "engines": {
    "node": ">=14.15.3"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "cli": "ts-node src/cli.ts",
    "start": "ts-node src/test.ts",
    "clean": "rm -rf lib",
    "prepare": "run-s clean build",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --check .",
    "lint": "eslint . --ext ts --ext tsx --ext js --quiet",
    "shell": "node -e \"$(< shell)\" -i --experimental-repl-await",
    "keeper": "ts-node src/keeper.ts",
    "test": "mocha -r ts-node/register test/**/*.test.ts --timeout 0",
    "test:build": "run-s build",
    "test:lint": "eslint src",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.14",
    "@types/jest": "^26.0.9",
    "@types/mocha": "^8.2.0",
    "@types/node": "^15.12.4",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chai": "^4.3.4",
    "cross-env": "^7.0.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^7.2.0",
    "mocha": "^8.4.0",
    "prettier": "^2.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "files": [
    "lib"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@project-serum/serum": "^0.13.38",
    "@project-serum/sol-wallet-adapter": "^0.2.0",
    "@solana/spl-token": "^0.1.6",
    "@solana/web3.js": "^1.18.0",
    "big.js": "^6.1.1",
    "bigint-buffer": "^1.1.5",
    "bn.js": "^5.1.2",
    "borsh": "https://github.com/defactojob/borsh-js#field-mapper",
    "buffer-layout": "^1.2.1",
    "yargs": "^17.0.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "maintained node versions"
  ]
}
